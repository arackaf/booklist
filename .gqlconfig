{
  "schema": {
    "files": "node/graphQL/entireSchema.gql"
  },
  "query": {
    "files": [
      {
        "match": "**/*.graphql",
        "parser": "QueryParser",
        "validate": {
          "extends": "gql-rules-query",
          "rules": {
            "LoneAnonymousOperation": "off",
            "NoUnusedVariables": "off",
            "NoUnusedTypeDefinition": "off",
          }
        }
      }
    ]
  }
}